{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Task Schema (Simplified)",
  "description": "Minimal task tracking for Claude Code projects",
  "type": "object",
  "required": ["id", "title", "status"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Task identifier (e.g., '1', '2', '3_1' for subtasks)"
    },
    "title": {
      "type": "string",
      "description": "Brief task title"
    },
    "description": {
      "type": "string",
      "description": "What needs to be done"
    },
    "difficulty": {
      "type": "integer",
      "description": "1-10 scale. Tasks >= 7 should be broken down.",
      "minimum": 1,
      "maximum": 10
    },
    "status": {
      "type": "string",
      "enum": ["Pending", "In Progress", "Blocked", "Broken Down", "Finished"]
    },
    "dependencies": {
      "type": "array",
      "description": "Task IDs that must complete first",
      "items": { "type": "string" },
      "default": []
    },
    "subtasks": {
      "type": "array",
      "description": "Child task IDs (when broken down)",
      "items": { "type": "string" },
      "default": []
    },
    "parent_task": {
      "type": ["string", "null"],
      "description": "Parent task ID if this is a subtask"
    },
    "notes": {
      "type": "string",
      "description": "Progress notes, completion summary, blockers",
      "default": ""
    }
  }
}
