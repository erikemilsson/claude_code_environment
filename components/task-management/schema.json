{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claude Code Task Schema",
  "description": "Schema for individual task files in the .claude/tasks/ directory",
  "type": "object",
  "required": [
    "id",
    "title",
    "description",
    "difficulty",
    "status",
    "created_date",
    "dependencies",
    "subtasks",
    "parent_task"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique task identifier (sequential numbering: '1', '2', '3', etc.)",
      "pattern": "^[0-9]+$"
    },
    "title": {
      "type": "string",
      "description": "Brief task title",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Detailed task description including requirements and acceptance criteria"
    },
    "difficulty": {
      "type": "integer",
      "description": "Task difficulty from 1-10 (based on LLM error probability). Tasks â‰¥7 should be broken down.",
      "minimum": 1,
      "maximum": 10
    },
    "status": {
      "type": "string",
      "description": "Current task status",
      "enum": ["Pending", "In Progress", "Blocked", "Broken Down", "Finished"]
    },
    "created_date": {
      "type": "string",
      "description": "Date task was created (YYYY-MM-DD format)",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "updated_date": {
      "type": "string",
      "description": "Date task was last updated (YYYY-MM-DD format)",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "assigned_to": {
      "type": ["string", "null"],
      "description": "Person assigned to this task (optional)"
    },
    "estimated_hours": {
      "type": "number",
      "description": "Estimated hours to complete (optional)",
      "minimum": 0
    },
    "actual_hours": {
      "type": "number",
      "description": "Actual hours spent (optional)",
      "minimum": 0
    },
    "dependencies": {
      "type": "array",
      "description": "Array of task IDs that must be completed before this task can start",
      "items": {
        "type": "string",
        "pattern": "^[0-9]+$"
      },
      "default": []
    },
    "subtasks": {
      "type": "array",
      "description": "Array of task IDs for subtasks (populated when task is broken down)",
      "items": {
        "type": "string",
        "pattern": "^[0-9]+$"
      },
      "default": []
    },
    "parent_task": {
      "type": ["string", "null"],
      "description": "Task ID of parent task (null if top-level task)",
      "pattern": "^[0-9]+$"
    },
    "files_affected": {
      "type": "array",
      "description": "List of files or directories affected by this task (optional)",
      "items": {
        "type": "string"
      }
    },
    "notes": {
      "type": "string",
      "description": "Additional notes, progress updates, or context",
      "default": ""
    },
    "blockers": {
      "type": "array",
      "description": "List of specific issues blocking progress (optional)",
      "items": {
        "type": "string"
      }
    },
    "tags": {
      "type": "array",
      "description": "Categorization tags (optional)",
      "items": {
        "type": "string"
      }
    },
    "breakdown_history": {
      "type": ["string", "null"],
      "description": "Date when task was broken down (YYYY-MM-DD format). Set when status becomes 'Broken Down'.",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    }
  }
}
