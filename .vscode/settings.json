{
  // Power Query Language Extension Settings
  "powerquery.general.mode": "SDK",
  "powerquery.sdk.defaultQueryFileMode": "SingleFile",

  // Editor Settings for Power Query (.pq files)
  "[powerquery]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.wordWrap": "on"
  },

  // File Associations
  "files.associations": {
    "*.pq": "powerquery",
    "*.pqm": "powerquery"
  },

  // Exclude Power Query extension generated files from search/explorer
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true
  },

  // Search Settings
  "search.exclude": {
    "**/node_modules": true,
    "**/.git": true
  },

  // Markdown Settings (for template documentation)
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },

  // JSON Settings (for task files and schemas)
  "[json]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  }
}
